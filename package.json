{
    "name": "mytudo",
    "private": true,
    "workspaces": [
        "client",
        "server",
        "shared"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:client": "npm run dev --workspace=client",
        "dev:server": "npm run dev --workspace=server",
        "build": "npm run build --workspaces",
        "lint": "npm run lint --workspaces"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "typescript": "^5.3.3"
    }
}