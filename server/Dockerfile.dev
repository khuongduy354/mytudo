# Development Dockerfile with hot-reload
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
COPY shared/package.json ./shared/
COPY server/package.json ./server/

RUN npm install

# Copy source
COPY shared ./shared
COPY server ./server
COPY tsconfig.json ./

# Build shared
RUN npm run build --workspace=shared

WORKDIR /app/server

EXPOSE 3000

CMD ["npm", "run", "dev"]
